<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#FDFFF5"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardCornerRadius="8dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/run_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Morning Run!"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="4dp"/>

        <LinearLayout
            android:padding="4dp"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/distance_helper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distance"/>

                <TextView
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 km"
                    android:textSize="22sp"
                    android:layout_below="@id/distance_helper"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/average_speed_helper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Average Speed"/>

                <TextView
                    android:id="@+id/average_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2400.04 m/h"
                    android:textSize="22sp"
                    android:layout_below="@id/average_speed_helper"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/run_time_helper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time"/>

                <TextView
                    android:id="@+id/run_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45 m 45 s"
                    android:textSize="22sp"
                    android:layout_below="@id/run_time_helper"/>

            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/history_bitmap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="August 21, 2020 at 4:41 AM"
            android:padding="4dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>